include core/mixins
include core/modal

doctype html
html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
        include core/head
    body
        .page.auth-page
            .logo-wrapper
                img(src="/assets/images/logo.png").logo
            .auth-wrapper
                h1 Вход в личный кабинет
                .tabs-btn-wrapper
                    button.btn-tab-switch.active(target="tab-1") Вход
                    button.btn-tab-switch(target="tab-2") Регистрация
                .tab-viewer
                    .tab.active(tab-name="tab-1")
                        form.auth
                            .input-wrapper
                                label E-mail
                                input.input
                            .input-wrapper
                                label Пароль
                                input.input(type="password")
                            .btn-wrapper
                                button.btn Войти
                    .tab(tab-name="tab-2")
                        form.add-user
                            .row
                                .input-wrapper
                                    label Имя
                                    input.input(placeholder="Иван")
                                .input-wrapper
                                    label Фамилия
                                    input.input(placeholder="Иванов")
                            .row
                                .input-wrapper
                                    label Дата рождения
                                    input.input(type="date")
                                .input-wrapper
                                    label Город
                                    input.input(placeholder="Москва")
                            .row
                                .input-wrapper
                                    label Номер телефона
                                    input.input(placeholder="891234589")
                                .input-wrapper
                                    label E-mail
                                    input.input(placeholder="mail@mail.ru")
                            .row
                                .input-wrapper
                                    label Пароль
                                    input.input(placeholder="password")
                                .input-wrapper
                                    label Повторите пароль
                                    input.input(placeholder="password")
                            .btn-wrapper
                                button.btn Регистрация



    include core/scripts
